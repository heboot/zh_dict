<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/qlyt_container"
            android:layout_width="@dimen/x335"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y90"
            android:background="#fff"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginTop="@dimen/y60"
                android:layout_marginRight="@dimen/x25"
                android:layout_marginBottom="@dimen/y60"
                android:text=""
                android:textColor="#ff2b2d30"
                android:textSize="@dimen/x17" />


        </com.qmuiteam.qmui.layout.QMUILinearLayout>


        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/x125"
            android:layout_height="@dimen/y40"
            android:layout_marginTop="@dimen/y45"
            android:background="@drawable/bg_ec_black_25"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="@dimen/x19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qlyt_container" />


    </android.support.constraint.ConstraintLayout>
</layout>