<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/x275"
        android:layout_height="@dimen/y160"
        android:background="@drawable/bg_rect_black">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginRight="@dimen/x20"
            android:gravity="left"
            android:text=" 是否将这个单词加入到生词本？"
            android:textColor="#ffffffff"
            android:textSize="@dimen/x19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qrb_ok"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y33"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginBottom="@dimen/y20"
            android:text="是"
            android:textColor="#fff"
            android:textSize="@dimen/x19"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:qmui_borderColor="#fff" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qrb_no"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y33"
            android:layout_marginRight="@dimen/x45"
            android:layout_marginBottom="@dimen/y20"
            android:text="否"
            android:textColor="#fff"
            android:textSize="@dimen/x19"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:qmui_borderColor="#fff" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>