<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y68"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"></androidx.recyclerview.widget.RecyclerView>


        <View
            android:id="@+id/v_left"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginBottom="@dimen/y25"
            android:background="@mipmap/icon_page_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></View>

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="上一页"
            android:textColor="#2B2D30"
            android:textSize="@dimen/x14"
            app:layout_constraintBottom_toBottomOf="@+id/v_left"
            app:layout_constraintLeft_toRightOf="@+id/v_left"
            app:layout_constraintTop_toTopOf="@+id/v_left"></TextView>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:text="下一页"
            android:textColor="#2B2D30"
            android:textSize="@dimen/x14"
            app:layout_constraintBottom_toBottomOf="@+id/v_left"
            app:layout_constraintRight_toLeftOf="@+id/v_right"
            app:layout_constraintTop_toTopOf="@+id/v_left"></TextView>

        <View
            android:id="@+id/v_right"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/y25"
            android:background="@mipmap/icon_page_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="第1关/第2页"
            android:textColor="#ff2b2d30"
            android:textSize="@dimen/x14"
            app:layout_constraintBottom_toBottomOf="@+id/v_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_left" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>