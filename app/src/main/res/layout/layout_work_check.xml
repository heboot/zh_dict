<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60">


        <CheckBox
            android:id="@+id/tv_no"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y25"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/selector_check_word_by_check"
            android:button="@null"
            android:gravity="center"
            android:text="A"
            android:textColor="@drawable/selector_font_check_word"
            android:textSize="@dimen/x17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x11"
            android:text="压力"
            android:textColor="#ff2b2d30"
            android:textSize="@dimen/x18"
            app:layout_constraintBottom_toBottomOf="@+id/tv_no"
            app:layout_constraintLeft_toRightOf="@+id/tv_no"
            app:layout_constraintTop_toTopOf="@+id/tv_no" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x11"
            android:textColor="#ff2b2d30"
            android:textSize="@dimen/x18"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_no"
            app:layout_constraintLeft_toRightOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_no" />
    </android.support.constraint.ConstraintLayout>
</layout>